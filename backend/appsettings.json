{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=cms.db"
  },
  "JwtSettings": {
    "Secret": "MySecretKeyForCMSSystemThatShouldBeAtLeast32Characters!",
    "Issuer": "MyCmsApi",
    "Audience": "MyCmsClient",
    "ExpirationDays": 7
  },
  "FileUpload": {
    "MaxFileSizeBytes": 10485760,
    "AllowedTypes": [
      "image/jpeg",
      "image/png", 
      "image/gif",
      "image/webp",
      "application/pdf",
      "text/plain",
      "application/msword",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document"
    ]
  }
}
